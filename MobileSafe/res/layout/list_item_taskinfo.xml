<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dip" >

    <ImageView
        android:id="@+id/iv_task_icon"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_task_icon"
        android:text="程序名"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_task_memsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_task_name"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@id/iv_task_icon"
        android:text="内存占用"
        android:textColor="#90000000"
        android:textSize="15sp" />
    
    <!-- android:focusable="false"没有焦点
        android:clickable="false" 不可点击-->
    <CheckBox 
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/cb_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/><!-- 右对齐，垂直居中 -->

</RelativeLayout>